#!/bin/bash

DAEMON="/usr/sbin/1wirevz"
PIDFILE="/tmp/1wirevz.pid" 

test -f $DAEMON || exit 0

case "$1" in

	start)
		test ! -f $PIDFILE || { echo "Deamon already running!"; exit 0; }
		$DAEMON
		;;

	stop)
		killall -q 1wirevz
		rm -f /tmp/1wirevz.pid
		;;

	restart)
		$0 stop
		$0 start
		;;

*)
echo "Usage: $0 {start|stop|restart}"
exit 1
;;
esac
